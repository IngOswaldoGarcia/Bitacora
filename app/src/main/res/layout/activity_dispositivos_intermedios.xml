<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.randomgames.shino.bitacora.DispositivosIntermedios">

    <LinearLayout
        android:layout_width="368dp"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        tools:layout_editor_absoluteX="8dp"
        tools:layout_editor_absoluteY="8dp">

        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">


                <TextView
                    android:id="@+id/textView"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Tipo de dispositivo:"
                    android:textAlignment="viewStart" />

                <EditText
                    android:id="@+id/idTipoDisp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:ems="10"
                    android:inputType="textPersonName"
                    android:textAlignment="viewStart" />

                <TextView
                    android:id="@+id/textView3"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Numero de serie:"
                    android:textAlignment="viewStart" />

                <EditText
                    android:id="@+id/idNumSerie"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:ems="10"
                    android:inputType="textPersonName"
                    android:textAlignment="viewStart" />

                <TextView
                    android:id="@+id/textview200"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Modelo:"
                    android:textAlignment="viewStart" />

                <EditText
                    android:id="@+id/idModelo"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:ems="10"
                    android:inputType="textPersonName"
                    android:textAlignment="viewStart" />

                <TextView
                    android:id="@+id/textView2"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Sistema operativo:"
                    android:textAlignment="viewStart" />

                <EditText
                    android:id="@+id/idSisOpera"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:ems="10"
                    android:inputType="textPersonName"
                    android:textAlignment="viewStart" />

                <TextView
                    android:id="@+id/textView202"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Archivo de configuracion:"
                    android:textAlignment="viewStart" />

                <EditText
                    android:id="@+id/idArchConfig"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:ems="10"
                    android:inputType="textPersonName"
                    android:textAlignment="viewStart" />

                <TextView
                    android:id="@+id/textView7"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Credenciales de acceso:"
                    android:textAlignment="viewStart" />

                <EditText
                    android:id="@+id/idCredenAcceso"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:ems="10"
                    android:hint="Usuario"
                    android:inputType="textPersonName"
                    android:textAlignment="viewStart" />

                <EditText
                    android:id="@+id/idCredenAccesoContraseña"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:ems="10"
                    android:hint="Contraseña"
                    android:inputType="textPersonName" />

                <TextView
                    android:id="@+id/textView6"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Ubicacion geografica:"
                    android:textAlignment="viewStart" />

                <EditText
                    android:id="@+id/idUbicGeo"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:ems="10"
                    android:hint="Latitud"
                    android:inputType="textPersonName"
                    android:textAlignment="viewStart" />

                <EditText
                    android:id="@+id/idUbicGeoLong"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:ems="10"
                    android:hint="Longitud"
                    android:inputType="textPersonName" />

                <Button
                    android:id="@+id/idGetUbicGeo"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:onClick="getPosition"
                    android:text="Obtener Ubicacion" />

                <Button
                    android:id="@+id/idRegisDisp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:onClick="onClick"
                    android:text="Registrar Dispositivo" />

                <Button
                    android:id="@+id/button2"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="18sp"
                    android:onClick="buttonToMiddleDevicesEntries"
                    android:text="Ver Consultas" />


            </LinearLayout>
        </ScrollView>

    </LinearLayout>
</android.support.constraint.ConstraintLayout>
